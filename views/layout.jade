html(lang="en")
  head
    title Heroku API
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js")
    script(src="/jquery.color.js")
    script(src="/jquery.cookie.js")
    script(src="/kikai.js")
    link(rel="stylesheet", href="/kikai.css")
  body
    #container

      #header
        #api_key
          span API Key
          input(type="text")
        #accept
          span Accept
          select
            option application/json
            option application/xml
        h1 Heroku API

      ul.sidebar
        !{ section_li("apps", "Apps", current_section) }
        !{ section_li("collaborators", "Collaborators", current_section) }
        !{ section_li("domains", "Domains", current_section) }
        !{ section_li("stacks", "Stacks", current_section) }

      #content!= body
